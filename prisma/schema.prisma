// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model GameWords {
    id    String  @id @default(uuid())
    words Words[]
}

model Words {
    id          String     @id @default(uuid())
    word        String
    difficulty  String
    GameWords   GameWords? @relation(fields: [gameWordsId], references: [id])
    gameWordsId String?
}
